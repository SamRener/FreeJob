<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_gradient"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

            <ImageView
                android:id="@+id/srli_client_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_profile"
                android:src="@drawable/constructor"/>
    <me.grantland.widget.AutofitTextView
        android:id="@+id/srli_service_client_name"
            android:layout_width="0dp"
            android:layout_weight="8.5"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_height="40dp"
            android:text="Construtor"
            android:textAlignment="center"
            android:textColor="@color/colorAlmostWhite"
            android:fontFamily="@font/segoeui"
            />
        <ImageButton
            android:id="@+id/srli_client_chat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:layout_margin="10dp"
            android:src="@drawable/ic_chat"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/srli_request_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:layout_margin="5dp"
            android:text="28/07/2000"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/colorAlmostWhite"
            android:textSize="17dp"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/srli_request_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_monetization"
            android:layout_margin="5dp"
            android:text="R$ 100,00"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/colorAlmostWhite"
            android:textSize="17dp"
            android:drawablePadding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.grantland.widget.AutofitTextView
            android:id="@+id/srli_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAlmostWhite"
            android:text=""
            android:drawableLeft="@drawable/ic_place"
            android:padding="5dp"
            android:fontFamily="@font/segoeuii"
            android:maxLines="1"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:textAlignment="center"
            />
    </LinearLayout>
</LinearLayout>