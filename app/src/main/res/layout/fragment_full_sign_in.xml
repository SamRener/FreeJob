<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/Main_Layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.design.button.MaterialButton
            android:id="@+id/cadastro_voltar"
            android:layout_alignParentStart="true"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            app:icon="@drawable/ic_voltar"
            app:backgroundTint="@android:color/white"
            app:iconTint="@color/colorAccent"
            android:visibility="gone"
            app:rippleColor="@color/colorAlmostWhite"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:text="VOLTAR"

            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/freejob_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Mais um pouquinho"
            android:paddingTop="5dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/seguisb"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/ASI_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Nós do FreeJob precisamos de mais informações para criar seu perfil. Falta pouquinho!"
            android:paddingTop="40dp"
            android:fontFamily="@font/seguisb"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="20dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="CPF"
                app:helperText="Seu CPF nunca será pedido por nós novamente"
                app:helperTextEnabled="true"
                android:textColorHint="@color/colorAccent"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/FFSI_cpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="CPF (Informação Segura)"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat"

                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                android:hint="Email"
                android:textColorHint="@color/colorAccent"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/FFSI_com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Um email para contato?"
                    android:textSize="15sp"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat"

                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.button.MaterialButton
                android:id="@+id/FFSI_cadastrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_margin="20dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                app:strokeWidth="2dp"
                app:strokeColor="@color/colorAccent"
                app:rippleColor="@color/colorAlmostWhite"
                android:layout_gravity="center"
                android:hint="Cadastrar"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorAccent"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>