<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FJ_userLayout"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >
    <RelativeLayout
        android:id="@+id/FJ_MainCardRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.card.MaterialCardView
            android:id="@+id/FJ_MainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@android:color/white">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/FJ_profile"
            android:layout_width="0dp"
            android:layout_weight="1.40"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <me.grantland.widget.AutofitTextView
                android:id="@+id/FJ_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp"
                android:lines="1"
                android:layout_marginStart="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <me.grantland.widget.AutofitTextView
                    android:id="@+id/FJ_type"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:textColor="#5c5c5c"
                    android:gravity="top"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </android.support.design.card.MaterialCardView>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <LinearLayout
           android:layout_marginTop="5dp"
           android:layout_marginBottom="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="3"
           android:orientation="horizontal"
           >
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <android.support.v7.widget.AppCompatImageButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_call"
               android:background="@android:color/transparent"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="LIGAR"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/colorAccent"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <android.support.v7.widget.AppCompatImageButton
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_text"
                   android:background="@android:color/transparent"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="MENSAGEM"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/colorAccent"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <android.support.v7.widget.AppCompatImageButton
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_add_contacts"
                   android:background="@android:color/transparent"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="SALVAR"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textSize="15sp"
                   android:textColor="@color/colorAccent"
                   />
           </LinearLayout>

       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ababab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textColor="@android:color/black"
            android:text="Samuel Rener estudou em tal e vai que gerando este form pra testar as implementações corretamente, não tem nada de realmente útil nisso aqui não, pq você continua lendo msm? eu naõ entendo isso"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ababab"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_worker_pin"/>
            <TextView
                android:id="@+id/FJ_Location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:textColor="@android:color/black"
                android:text="Rua Amalteia - 36 - Vale do Sol - Nova Lima"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_done_all"/>
            <TextView
                android:id="@+id/FJ_Finished_Jobs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:textColor="@android:color/black"
                android:text="3450 Serviços realizados"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_stars"/>
            <TextView
                android:id="@+id/FJ_Rating"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:textColor="@android:color/black"
                android:text="Ótimo - 4.5"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ababab"/>
        <android.support.design.button.MaterialButton
            android:id="@+id/FJ_start_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:rippleColor="@color/colorAlmostWhite"
            android:textColor="@android:color/white"
            android:text="INICIAR TRABALHO"
            />
    </LinearLayout>
</LinearLayout>