<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RequestsActivity"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">
        <ImageButton
            android:id="@+id/ARS_voltar"

            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:src="@drawable/ic_voltar"
            android:background="@android:color/transparent"/>
        <me.grantland.widget.AutofitTextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:maxLines="1"
            android:text="Serviços"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:textSize="25dp"
            android:textColor="@color/colorAlmostWhite"
            android:layout_height="match_parent"

            />
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:src="@drawable/freejob_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

    <me.grantland.widget.AutofitTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aqui aparecerá todos os serviços que você já pediu"
        android:fontFamily="@font/segoeui"
        android:textColor="@color/colorAlmostWhite"
        android:textSize="18dp"
        android:maxLines="2"
        android:textAlignment="center"
        />
    <ListView
        android:id="@+id/ARS_requests"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>